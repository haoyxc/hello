<div class="container">


    {{#if error}}
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation-triangle"> Error: {{error}}</i>
    </div>
    {{/if}}

    <div class="form-container">
        <form method="POST"
            {{!-- style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px" --}}>
            <h1>Sign In</h1>
            <input type="text" name="username" placeholder="Username">
            <input type="tel" name="phone"placeholder="1234567890">
            <input type="password" name="password" placeholder="Password">
            <input type="password" name="passwordRepeat" placeholder="Verify Password">
            <button class="form-btn">Register</button>
        </form>
    </div>
</div>